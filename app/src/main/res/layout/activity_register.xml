<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:fontFamily="casual"
            android:text="Here is your\nHealth Buddy"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="casual"
            android:text="Please register to be with us ..."
            android:textColor="@color/colorPrimary"
            android:textSize="25dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:hint="Username"
            android:layout_marginTop="8dp"
            app:boxStrokeColor="@color/colorPrimary"
            android:textColorHint="#716E6E"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/nameText"
                android:textColor="@color/colorPrimary"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:hint="Password"
            android:layout_marginTop="8dp"
            app:boxStrokeColor="@color/colorPrimary"
            android:textColorHint="#716E6E"
            app:passwordToggleEnabled="true"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/passRegText"
                android:textColor="@color/colorPrimary"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:hint="Age"
            android:layout_marginTop="8dp"
            app:boxStrokeColor="@color/colorPrimary"
            android:textColorHint="#716E6E"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:id="@+id/ageText"
                android:inputType="number"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:hint="Allergies"
            android:layout_marginTop="8dp"
            app:boxStrokeColor="@color/colorPrimary"
            android:textColorHint="#716E6E"

            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/allergiesText"
                android:textColor="@color/colorPrimary"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:hint="Current Medications"
            android:layout_marginTop="8dp"
            app:boxStrokeColor="@color/colorPrimary"
            android:textColorHint="#716E6E"

            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/currMedicationsText"
                android:textColor="@color/colorPrimary"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:background="@drawable/button_login"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:text="Register now"
            android:layout_margin="20dp"
            android:onClick="onClickRegisterNow"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>